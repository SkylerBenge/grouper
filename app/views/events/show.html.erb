<style>
  .amount_text_fields {
    width: 100px !important;
    display: inline !important;
  }

  .modal_lables {
    display: inline !important;
  }
</style>

<div id="contribute_modal" class="reveal-modal">
  <a class="close-reveal-modal">&#215;</a>
  <h2>What would you like to contribute?</h2>
  <%= form_tag('/blah', :id => 'contribute_form') do %>
      <%= check_box_tag 'land', 'land', nil %>
      I have land
      <%= text_field_tag 'land_amount', nil, :class => 'amount_text_fields' %>
      <%= label_tag 'land_amount', 'sqft', :class => 'modal_lables' %>

      <br>

      <%= check_box_tag 'seeds', 'seeds', nil %>
      I have seeds
      <%= text_field_tag 'seed_amount', nil, :class => 'amount_text_fields' %>
      <%= label_tag 'seed_amount', 'amount', :class => 'modal_lables' %>

      <br>

      <%= check_box_tag 'compost', 'compost', nil %>
      I have compost
      <%= text_field_tag 'compost_amount', nil, :class => 'amount_text_fields' %>
      <%= label_tag 'compost_amount', 'lbs', :class => 'modal_lables' %>

      <br>

      <%= submit_tag 'Contribute', :class => 'button' %>
    <% end %>
</div>


